{
  "name": "matrix-protocol",
  "version": "1.0.0",
  "description": "matrix protocol contracts",
  "main": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gzliudan/MatrixProtocol"
  },
  "keywords": [
    "matrix",
    "protocol",
    "fund",
    "defi",
    "solidity",
    "ethereum",
    "smart contracts"
  ],
  "author": "Daniel Liu",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/gzliudan/MatrixProtocol/issues",
    "email": "liudaniel@qq.com"
  },
  "homepage": "https://github.com/gzliudan/MatrixProtocol#README",
  "engines": {
    "node": ">=14.15.0",
    "npm": ">=6.14.8",
    "yarn": ">=1.22.0"
  },
  "scripts": {
    "clean": "rm -rf coverage.json coverage cache artifacts",
    "compile": "hardhat compile",
    "size": "mkdir -p deploy && hardhat size-contracts --no-compile > deploy/size.txt",
    "test": "hardhat test",
    "test:gas": "REPORT_GAS=true yarn test",
    "coverage": "yarn clean && COVERAGE=true hardhat coverage",
    "make": "yarn clean && yarn compile && yarn test && yarn size",
    "deploy:xinfin": "hardhat run --network xinfin ./deploy/deploy.js",
    "deploy:apothem": "hardhat run --network apothem ./deploy/deploy.js",
    "deploy:xdcdev": "hardhat run --network xdcdev ./deploy/deploy.js",
    "deploy:mumbai": "hardhat run --network mumbai ./deploy/deploy.js",
    "deploy:polygon": "hardhat run --network polygon ./deploy/deploy.js",
    "deploy:kovan": "hardhat run --network kovan ./deploy/deploy.js",
    "deploy:mainnet": "hardhat run --network mainnet ./deploy/deploy.js",
    "grantAdmin:mumbai": "hardhat --network mumbai grantAdminRole --account",
    "grantAdmin:polygon": "hardhat --network polygon grantAdminRole --account",
    "grantAdmin:kovan": "hardhat --network kovan grantAdminRole --account",
    "grantAdmin:mainnet": "hardhat --network mainnet grantAdminRole --account",
    "grantDefaultAdmin:mumbai": "hardhat --network mumbai grantDefaultAdminRole --account",
    "grantDefaultAdmin:polygon": "hardhat --network polygon grantDefaultAdminRole --account",
    "grantDefaultAdmin:kovan": "hardhat --network kovan grantDefaultAdminRole --account",
    "grantDefaultAdmin:mainnet": "hardhat --network mainnet grantDefaultAdminRole --account",
    "revokeAdmin:mumbai": "hardhat --network mumbai revokeAdminRole --account",
    "revokeAdmin:polygon": "hardhat --network polygon revokeAdminRole --account",
    "revokeAdmin:kovan": "hardhat --network kovan revokeAdminRole --account",
    "revokeAdmin:mainnet": "hardhat --network mainnet revokeAdminRole --account",
    "revokeDefaultAdmin:mumbai": "hardhat --network mumbai revokeDefaultAdminRole --account",
    "revokeDefaultAdmin:polygon": "hardhat --network polygon revokeDefaultAdminRole --account",
    "revokeDefaultAdmin:kovan": "hardhat --network kovan revokeDefaultAdminRole --account",
    "revokeDefaultAdmin:mainnet": "hardhat --network mainnet revokeDefaultAdminRole --account",
    "verify:mumbai": "hardhat run --network mumbai ./deploy/verify.js",
    "verify:polygon": "hardhat run --network polygon ./deploy/verify.js",
    "verify:kovan": "hardhat run --network kovan ./deploy/verify.js",
    "verify:mainnet": "hardhat run --network mainnet ./deploy/verify.js",
    "build:mumbai": "yarn make && yarn deploy:mumbai && yarn verify:mumbai",
    "build:polygon": "yarn make && yarn deploy:polygon && yarn verify:polygon",
    "build:kovan": "yarn make && yarn deploy:kovan && yarn verify:kovan",
    "build:mainnet": "yarn make && yarn deploy:mainnet && yarn verify:mainnet"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.8",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "chai": "^4.4.1",
    "dayjs": "^1.11.10",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "ethereum-checksum-address": "^0.0.8",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.7.2",
    "hardhat": "~2.22.2",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^2.0.2",
    "prettier": "^3.2.5",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^4.5.2",
    "solhint-plugin-prettier": "^0.1.0",
    "solidity-coverage": "^0.8.11",
    "strip-ansi-cli": "^4.0.0",
    "web3": "^4.7.0"
  },
  "dependencies": {
    "@chainlink/contracts": "^1.0.0",
    "@openzeppelin/contracts": "4.9.6"
  }
}
